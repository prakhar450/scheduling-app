<%- include("../partials/header") %>
<div class="row">
    <h1 style="text-align: center">Add Slot</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/schedules/<%=schedule_id%>/slots/" method="POST">
            <div class="form-group">
                <aside class="widget">
                    <p>Date: <input type="text" class="form-control" id="datepick" name="date"></p> 
                </aside>
            </div>
            <div class="form-group">
                <p>Hour: <select class="form-control" id="hour" name="hour">
                    <% hours.forEach(function(hour){ %>
                    <option value="<%=hour%>"><%= hour %></option>
                    <% }) %>
                </select> </p>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Add Slot</button>
            </div>
        </form>
        <a href="/">Go Back</a>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#datepick").datepicker();
        });
    </script>
</div>
<%- include("../partials/footer") %>