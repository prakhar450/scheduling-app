<%- include("../partials/header") %>
<div class="row">
    <h1 style="text-align: center">Book Slot</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/schedules/<%= schedule_id %>/slots/<%=slot._id %>?slot_status=<%=slot_status%>&_method=PUT"
            method="POST">
            <div class="form-group">
                <input class="form-control" type="text" value="<%=slot.description %>" name="slot[description]"
                    placeholder="text">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/">Go Back</a>
    </div>
</div>
<%- include("../partials/footer") %>